	</div>
	<div class="row">
		<div class="eight wide column">
			<GrabberCard @width="49%" @text="{{@model.grabber_one.second_verse_card}}" @answer="{{@model.grabber_one.second_verse_answer}}" @type="demo" @size="demo"/>
