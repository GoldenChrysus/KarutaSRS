<div class="ui left aligned segment">
	<h4 class="ui dividing header">
		{{#if (eq this.type "register")}}
			Register for
		{{else}}
			Login to
		{{/if}}
		{{title}}
	</h4>
	{{#if login_error}}
		<div class="ajax-response" data-for="login-form">
			<div class="ui error message">
				<i class="remove icon"></i>
				{{this.login_message}}
			</div>
		</div>
	{{/if}}
	<form class="ui form" name="login-form" id="login-form" {{action "login" on="submit"}}>
		<div class="field">
			<div class="ui icon input">
				{{input value=email placeholder="Email" name="email"}} <i class="user icon"></i>
			</div>
		</div>
		<div class="field">
			<div class="ui icon input">
				{{input value=password type="password" placeholder="Password" name="password"}} <i class="lock icon"></i>
			</div>
		</div>
		{{#if (eq this.type "register")}}
			<div class="field">
				<div class="ui icon input">
					{{input value=confirm_password type="password" placeholder="Confirm Password" name="confirm_password"}} <i class="lock icon"></i>
				</div>
			</div>
		{{/if}}
		<div class="ui buttons">
			{{#if (eq this.type "register")}}
				<input type="submit" name="register" class="ui green button" value="Register" {{action "register" on="click"}}>
			{{else}}
				<input type="submit" name="submit" class="ui blue button" value="Login" {{action "login" on="click"}}>
			{{/if}}
		</div>
	</form>
</div>