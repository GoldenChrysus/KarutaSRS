<div class="ui left aligned segment">
	<h4 class="ui dividing header">Login to {{title}}</h4>
	{{#if login_error}}
		<div class="ajax-response" data-for="login-form">
			<div class="ui error message">
				<i class="remove icon"></i>Login failed. Please try again.
			</div>
		</div>
	{{/if}}
	<form class="ui form" name="login-form" id="login-form" {{action "login" on="submit"}}>
		<div class="field">
			<div class="ui icon input">
				{{input value=email placeholder="Email" name="email"}} <i class="user icon"></i>
			</div>
		</div>
		<div class="field">
			<div class="ui icon input">
				{{input value=password type="password" placeholder="Password" name="password"}} <i class="lock icon"></i>
			</div>
		</div>
		<div class="ui buttons">
			<input type="submit" name="submit" class="ui primary button" value="Login" {{action "login" on="click"}}>
			<div class="or"></div>
			<input type="submit" name="register" class="ui button" value="Register" {{action "register" on="click"}}>
		</div>
	</form>
</div>