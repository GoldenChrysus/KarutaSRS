{{#if (eq this.state "filtering")}}
	<Practice::Quiz::Filters @poems={{this.poems}} @learned={{this.learned}} @start={{action "start"}}/>
{{else if (eq this.state "playing")}}
	<Practice::Quiz::Item @current_set={{this.current_set}} @answer={{action "answer"}}/>
{{else}}
	<Practice::Quiz::Statistics @poems={{this.poems}} @quiz_length={{this.quiz_length}} @timings={{this.timings}} @incorrect={{this.incorrect}} @restart={{action "restart"}}/>
{{/if}}