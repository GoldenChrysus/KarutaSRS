<div class="ui styled accordion fluid poem-filters-container" {{did-insert this.didInsert}}>
	<div class="title">
		<i class="dropdown icon"></i>
		Filters
	</div>
	<div class="content">
		<div class="poem-filters">
			<div class="poem-filter-types">
				<div class="ui clearable selection dropdown compact">
					<Input @type="hidden" @value={{this.kimariji_length}} />
					<span class="default text">Kimariji Length</span>
					<i class="dropdown icon"></i>
					<div class="menu">
						<div class="header">Kimariji Length</div>
						<div class="item">1</div>
						<div class="item">2</div>
						<div class="item">3</div>
						<div class="item">4</div>
						<div class="item">5</div>
						<div class="item">6</div>
					</div>
				</div>
				<div class="ui clearable selection dropdown compact">
					<Input @type="hidden" @value={{this.second_verse_answer_length}} />
					<span class="default text">2nd Verse Length</span>
					<i class="dropdown icon"></i>
					<div class="menu">
						<div class="header">2nd Verse Length</div>
						<div class="item">1</div>
						<div class="item">2</div>
						<div class="item">3</div>
						<div class="item">4</div>
						<div class="item">5</div>
						<div class="item">7</div>
						<div class="item">8</div>
					</div>
				</div>
				<div class="ui input">
					<Input name="kimariji" @type="text" @placeholder="Kimariji" @value={{this.kimariji}}/>
				</div>
				<div class="ui input">
					<Input name="second_verse" @type="text" @placeholder="2nd Verse" @value={{this.second_verse}}/>
				</div>
				<div class="ui clearable selection dropdown compact">
					<Input @type="hidden" @value={{this.learned}} />
					<span class="default text">Learned</span>
					<i class="dropdown icon"></i>
					<div class="menu">
						<div class="header">Learned</div>
						<div class="item" data-value="-1">All</div>
						<div class="item" data-value="1">Yes</div>
						<div class="item" data-value="0">No</div>
					</div>
				</div>
			</div>
			<div class="poem-filter-sort">
				<div class="ui compact selection dropdown">
					<Input @type="hidden" @value={{this.sort}} />
					<i class="icon sort"></i>
					<span class="default text">Sort</span>
					<i class="dropdown icon"></i>
					<div class="menu">
						<div class="item" data-value="num">Poem #</div>
						<div class="item" data-value="kimariji">Kimariji Length</div>
						<div class="item" data-value="second_verse">2nd Verse Length</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
